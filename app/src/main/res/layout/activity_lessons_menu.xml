<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LessonsMenuActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="Lessons"
        android:textColor="#100F0F"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TableLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/lessons_menu_lesson_button_1"
                style="@style/LessonButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lesson 1" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/lessons_menu_lesson_button_2"
                style="@style/LessonButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lesson 2" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/lessons_menu_lesson_button_3"
                style="@style/InactiveLessonButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lesson 3" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/lessons_menu_lesson_button_4"
                style="@style/InactiveLessonButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lesson 4" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/lessons_menu_lesson_button_5"
                style="@style/InactiveLessonButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lesson 5" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/lessons_menu_lesson_button_6"
                style="@style/InactiveLessonButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lesson 6" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/lessons_menu_lesson_button_7"
                style="@style/InactiveLessonButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lesson 7" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/lessons_menu_lesson_button_8"
                style="@style/InactiveLessonButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lesson 8" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/lessons_menu_lesson_button_9"
                style="@style/InactiveLessonButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lesson 9" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/lessons_menu_lesson_button_10"
                style="@style/InactiveLessonButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lesson 10" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/lessons_menu_lesson_button_11"
                style="@style/InactiveLessonButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lesson 11" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/lessons_menu_lesson_button_12"
                style="@style/InactiveLessonButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lesson 12" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/lessons_menu_lesson_button_13"
                style="@style/InactiveLessonButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lesson 13" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/lessons_menu_lesson_button_14"
                style="@style/InactiveLessonButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lesson 14" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/lessons_menu_lesson_button_15"
                style="@style/InactiveLessonButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lesson 15" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/lessons_menu_lesson_button_16"
                style="@style/InactiveLessonButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lesson 16" />
        </TableRow>

    </TableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>