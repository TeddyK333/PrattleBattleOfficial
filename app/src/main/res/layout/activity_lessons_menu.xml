                android:id="@+id/lessons_menu_lesson_button_7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Button" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/lessons_menu_lesson_button_8"
